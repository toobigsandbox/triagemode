    <script>
        // EF Logic
        function toggleEF() { document.getElementById('ef-panel').classList.toggle('open'); }
        function toggleApparatus() { document.getElementById('apparatus-modal').classList.remove('hidden'); document.getElementById('apparatus-modal').classList.add('flex'); }
        function toggleTriage(enable) {
            const body = document.body;
            const expl = document.querySelectorAll('.explorer-only');
            const tri = document.querySelector('.triage-banner');
            
            if(enable) {
                body.style.backgroundColor = '#fef3c7'; // Yellow tint
                expl.forEach(el => el.classList.add('hidden'));
                tri.classList.remove('hidden');
            } else {
                body.style.backgroundColor = ''; 
                expl.forEach(el => el.classList.remove('hidden'));
                tri.classList.add('hidden');
            }
        }

        document.getElementById('apparatus-modal').addEventListener('click', function(e) {
            if(e.target === this) {
                this.classList.add('hidden');
                this.classList.remove('flex');
            }
        });

        // Sim Logic
        let step = 0;
        const simContent = document.getElementById('sim-content');
        const simScript = document.getElementById('sim-script');

        const steps = [
            {
                html: `<div class="flex gap-2">
                        <div class="bead-disk bg-green-400 w-12 h-12 text-xl">8</div>
                        <div class="bead-disk bg-blue-300 w-10 h-10 text-lg">6</div>
                       </div>
                       <div class="mt-4 font-bold text-gray-500">Dividend: 8.6</div>`,
                script: "Step 1: Lay out the beads. 8 Units and 6 Tenths."
            },
            {
                html: `<div class="flex gap-4 items-end">
                        <div class="skittle skittle-green h-20 w-12"></div>
                        <div class="skittle skittle-green h-20 w-12"></div>
                        <div class="skittle skittle-green h-20 w-12"></div>
                        <div class="skittle skittle-green h-20 w-12"></div>
                        <div class="w-1 bg-gray-300 h-20"></div>
                        <div class="skittle skittle-blue h-16 w-10"></div>
                        <div class="skittle skittle-blue h-16 w-10"></div>
                        <div class="skittle skittle-blue h-16 w-10"></div>
                       </div>
                       <div class="mt-4 font-bold text-gray-500">Divisor: 4.3 (4 Units, 3 Tenths)</div>`,
                script: "Step 2: Set up the Skittles (Guests). 4 Big Green Units and 3 Small Blue Tenths."
            },
            {
                html: `<div class="flex flex-col gap-4">
                        <div class="bg-white/80 p-2 rounded border border-gray-300">
                            <span class="font-bold text-green-600">Green Skittles</span> get <span class="bead-disk bg-green-400">1</span> each
                        </div>
                        <div class="bg-white/80 p-2 rounded border border-gray-300">
                            <span class="font-bold text-blue-600">Blue Skittles</span> get <span class="bead-disk bg-blue-300">0.1</span> each
                        </div>
                        <div class="text-xs text-purple-600 font-bold mt-2 animate-bounce">Why? Tenths get 10x less!</div>
                       </div>`,
                script: "Step 3: Share! Give Units to Units. But Tenths are smaller, so they only get Tenths."
            },
            {
                html: `<div class="text-6xl font-black text-purple-500 pop-card p-4 rotate-2">2</div>
                       <div class="mt-2 text-sm font-bold text-gray-600">Each Unit Skittle got 2 beads.</div>`,
                script: "Step 4: The Answer! Look at ONE green skittle. It has 2 beads. The answer is 2."
            }
        ];

        function nextSimStep() {
            if(step >= steps.length) step = 0;
            simContent.innerHTML = steps[step].html;
            simScript.innerText = steps[step].script;
            step++;
        }
    </script>
</body>
